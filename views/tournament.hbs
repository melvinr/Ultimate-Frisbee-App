{{> header_tournament}}

<main id="main" class="matchesmain" role="main">
    <section id="matches-block" class="matches__items">
        {{#items}}
            {{#if dayOne}}
            <div class="division">
                <h1>{{dayOne.1.start_date}}</h1>
                {{#each dayOne}}
                    {{> content_matches}}
                {{/each}}
            </div>
            {{/if}}
            {{#if dayTwo}}
              <div class="division">
                <h1>{{dayTwo.1.start_date}}</h1>
                {{#each dayTwo}}
                    {{> content_matches}}
                {{/each}}
              </div>
            {{/if}}
            {{#if dayThree}}
              <div class="division">
                <h1>{{dayThree.1.start_date}}</h1>
                {{#each dayThree}}
                    {{> content_matches}}
                {{/each}}
              </div>
            {{/if}}
        {{/items}}
    </section>
</main>
