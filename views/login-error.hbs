{{> header_login }}

<section id="login">

    <form class="login" action="/api/login" method="POST">

        <fieldset>

            <legend class="legend">Scorekeeper</legend>

            <div class="input">
                <input type="email" name="email" placeholder="Email" required autofocus />
                <span><i class="fa fa-envelope-o"></i></span>
            </div>

            <div class="input">
                <input type="password" name="password" placeholder="Password" required />
                <span><i class="fa fa-lock"></i></span>
            </div>

            <button type="submit" class="login_submit"><i class="fa fa-long-arrow-right"></i></button>

        </fieldset>

        <div class="feedback errorMsg is-visible">
          <i class="fa fa-exclamation-circle" aria-hidden="true"></i>{{ error }}
        </div>

    </form>

</section>
