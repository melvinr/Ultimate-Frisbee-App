<header class="siteheader">
    <h1>MATCH</h1>
    <nav>
        <ul class="tabs">
            <li id="info"><a href="#match/info" class="tablinks">Info</a></li>
            <li id="scores" class="active"><a href="#match/scores" class="tablinks">Scores</a></li>
            <li id="location"><a href="#match/location" class="tablinks">Location</a></li>
        </ul>
    </nav>
</header>

<section class="matches">

    <form action="match/score" method="POST">

        <div id="teams">

            <div class="team team__home">

                <div class="top">
                    <button class="btn btn-minus" name="team_home_minus" id="team__home__minus">-</button>
                </div>

                <div class="team__home__info">
                    <span class="team__home__info__name">Ireland</span>
                    <span class="team__home__info__score">2</span>
                </div>

                <div class="bottom">
                    <button class="btn btn-plus" name="team__home__plus" id="team__home__plus">+</button>
                </div>

            </div>

            <div class="team team__away">

                <div class="top">
                    <button class="btn btn-minus" name="team_away_minus" id="team__away__minus">-</button>
                </div>

                <div class="team__away__info">
                    <span class="team__away__info__name">Netherlands</span>
                    <span class="team__away__info__score">0</span>
                </div>

                <div class="bottom">
                    <button class="btn btn-plus" name="team__away__plus" id="team__away__plus">+</button>
                </div>

            </div>

        </div>

        <div class="match__content">

            <h2 class="match__content__title">Match Details</h2>

            <table class="match__content__info">
                <tr>
                    <th>Time</th>
                    <td>9:00 - 10:30</td>
                </tr>
                <tr>
                    <th>Field</th>
                    <td>5</td>
                </tr>
                <tr>
                    <th>Round</th>
                    <td>9:00 - 10:30</td>
                </tr>
                <tr>
                    <th>Tournament</th>
                    <td>2</td>
                </tr>
            </table>

            <!-- <input type="number" id="team1" name="score-team-1" value="5" />
      <input type="number" id="team2" name="score-team-2" value="3" /> -->

            <input type="submit" id="submit" name="submit" value="Submit" />

        </div>

    </form>

</section>
